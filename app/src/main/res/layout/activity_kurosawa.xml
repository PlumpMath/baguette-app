<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/KurosawaActivity"
    android:orientation="vertical"
    tools:context="com.baguette.studioh.baugette.KurosawaActivity">
    <android.support.v7.widget.Toolbar
        android:layout_gravity="top"
        android:id="@+id/toolbar"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/back"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/ic_arrow_back_white_48dp"
                android:layout_marginRight="10dp"
                android:onClick="back"/>
            <TextView
                android:id="@+id/profileTopBarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="7dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/write"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="21dp"
                    android:textColor="#111111"
                    android:text="Upload your memory"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#888888" />
            <EditText
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:background="#7f000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadTitleInput"
                android:fontFamily="sans-serif"
                android:inputType="text"
                android:hint="TITLE"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:typeface="normal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />
            <RelativeLayout
                android:onClick="uploadDrawingBtnClick"
                android:id="@+id/uploadDrawingBtn"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/uploadDrawingImage"
                    android:foreground="#77FFFFFF"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/signup_bg"
                    android:scaleType="centerCrop" />
                <View android:id="@+id/uploadPictureFilter"
                    android:background="#BBFFFFFF"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRAWING"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:onClick="uploadPhotoBtnClick"
                android:id="@+id/uploadPhotoBtn"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/uploadPhotoImage"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/login_bg"
                    android:scaleType="centerCrop" />
                <View android:id="@+id/uploadPhotoFilter"
                    android:layout_height="match_parent"
                    android:background="#BBFFFFFF"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHOTOGRAPH"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:onClick="kurosawaNext"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:layout_width="130dp"
                android:layout_height="65dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="NEXT" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
