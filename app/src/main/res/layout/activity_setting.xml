<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SettingActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context="com.baguette.studioh.baugette.SettingActivity">
    <android.support.v7.widget.Toolbar
        android:layout_gravity="top"
        android:id="@+id/toolbar"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/back"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/ic_arrow_back_white_48dp"
                android:layout_marginRight="10dp"
                android:onClick="back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="Settings"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/settingsBackground"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/joong_1"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/profile_example"
                    android:onClick="settingsProfileImageClick"
                    android:id="@+id/settingsProfileImage"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"
                    app:riv_border_color="#f080868f"
                    app:riv_border_width="1.5dp"
                    android:layout_gravity="right"
                    app:riv_oval="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/settingsScreenName"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:text="jungseoblee"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:onClick="settingsClick1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/person_ico"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="Account Information" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FF888888" />
        <RelativeLayout
            android:onClick="settingsClick2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/pen_ico"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="My Gallery" />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FF888888" />
        <RelativeLayout
            android:onClick="settingsClick3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/film_ico"
                    android:onClick="settingsProfileImage"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="About Jung Seop Lee" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
